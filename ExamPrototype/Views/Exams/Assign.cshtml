@model ExamPrototype.ExamDeptViewModel
@{
    ViewBag.Title = "Assign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Assign</h2>
@using (Html.BeginForm("Assign", "Exams", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(model => model.DepartmentObj.Department_Id, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(s => s.DepartmentObj.Department_Id, new SelectList(Model.DepartmentList, "Department_Id", "Name"), "Select Department", new { @class = "btn btn-primary" })

        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Assign" class="btn btn-primary" />
        </div>
    </div>
}
